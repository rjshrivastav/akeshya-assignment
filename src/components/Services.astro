---
import ServiceCard from "./card/ServiceCard.astro";
---

<head>
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />
</head>

<body>
  <div class="grid gap-2 items-center justify-center mt-[25rem] lg:mt-0">
    <div data-aos="fade-up" data-aos-delay="100" class="flex justify-center items-center gap-2 mt-20 font-sans">
      <div class="border-b-[3px] w-[4rem] border-[#14279b]"></div>
      <h1 class="font-bold text-3xl">SERVICES</h1>
      <div class="border-b-[3px] w-[4rem] border-[#14279b]"></div>
    </div>
    <p data-aos="fade-up" data-aos-delay="150" class="p-3 lg:p-0" >
      Akeshya will serve as your consultant and development partner to help you
      turn your idea into a reality.
    </p>
  </div>
  <div class="lg:flex mt-8">
    <ServiceCard />
  </div>
</body>
